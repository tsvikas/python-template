# Read the Docs configuration file for MkDocs projects
# See https://docs.readthedocs.com/platform/stable/config-file/v2.html
# and https://docs.readthedocs.com/platform/stable/intro/zensical.html for details

version: 2

build:
  os: ubuntu-lts-latest
  tools:
    python: latest
  jobs:
    # see https://docs.readthedocs.com/platform/stable/build-customization.html#install-dependencies-with-uv
    pre_create_environment:
      - asdf plugin add uv
      - asdf install uv latest
      - asdf global uv latest
    create_environment:
      - uv venv "${READTHEDOCS_VIRTUALENV_PATH}"
    install:
      - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv sync --frozen --only-group docs
    build:
      html:
        - UV_PROJECT_ENVIRONMENT="${READTHEDOCS_VIRTUALENV_PATH}" uv run zensical build --clean
        - mkdir -p $READTHEDOCS_OUTPUT/html/
        - cp --recursive site/* $READTHEDOCS_OUTPUT/html/
