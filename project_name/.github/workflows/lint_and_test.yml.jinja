name: Lint and test

"on": [push, pull_request]

jobs:
  {%- if format_tool == "black" %}
  black:
    if: {% raw %}${{ always() }}{% endraw %}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: psf/black@stable
        with:
          jupyter: {{"true" if contains_jupyter_files else "false"}}
          version: "~=25.0"
  {%- endif %}
  {%- if format_tool == "ruff" %}
  ruff-format:
    if: {% raw %}${{ always() }}{% endraw %}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: astral-sh/ruff-action@v3
        with:
          args: "format --check"
  {%- endif %}
  ruff-lint:
    if: {% raw %}${{ always() }}{% endraw %}
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: astral-sh/ruff-action@v3
  pre-commit:
    if: {% raw %}${{ always() }}{% endraw %}
    env:
      COLUMNS: 120
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
      - uses: astral-sh/setup-uv@v5
      - uses: pre-commit/action@v3.0.1
  test:
    if: {% raw %}${{ always() }}{% endraw %}
    runs-on: ubuntu-latest
    strategy:
      matrix:
        resolution:
          - "no-upgrade"
          - "highest"
          - "lowest"
        python-version:
          {%- if python_minor <= 9 %}
          - "3.9"
          {%- endif %}
          {%- if python_minor <= 10 %}
          - "3.10"
          {%- endif %}
          {%- if python_minor <= 11 %}
          - "3.11"
          {%- endif %}
          {%- if python_minor <= 12 %}
          - "3.12"
          {%- endif %}
          {%- if python_minor <= 13 %}
          - "3.13"
          {%- endif %}
        allow-failure: [false]
        include:
          # map resolution to resolution-args
          - resolution: "no-upgrade"
            resolution-args: "--no-upgrade"
          - resolution: "highest"
            resolution-args: "--upgrade --resolution highest"
          - resolution: "lowest"
            resolution-args: "--upgrade --resolution lowest-direct"
          # add prerelease versions
          - resolution: "prerelease"
            resolution-args: "--upgrade --resolution highest --prerelease allow"
            python-version: "3.13"
            allow-failure: true
          - resolution: "prerelease"
            resolution-args: "--upgrade --resolution highest --prerelease allow"
            python-version: "3.14"
            allow-failure: true
    continue-on-error: {% raw %}${{ matrix.allow-failure }}{% endraw %}
    name: {% raw %}test-py${{ matrix.python-version }}-${{ matrix.resolution }}{% endraw %}
    steps:
      - uses: actions/checkout@v4
      - uses: astral-sh/setup-uv@v5
        with:
          enable-cache: true
          python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
      - name: Install the project
        run: uv sync --all-extras --group test {% raw %}${{ matrix.resolution-args }}{% endraw %}
      - name: Run tests
        run: uv run pytest
